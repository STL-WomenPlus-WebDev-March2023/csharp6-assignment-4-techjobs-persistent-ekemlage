@using TechJobs6Persistent.ViewModels
@model TechJobs6Persistent.ViewModels.AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="Employer">Employer</label>
        <input asp-for="Employer" class="form-control" name="Employer" list="SelectListItem">
        <datalist id="SelectListItem">
            @foreach (Employer listItem in Model.SelectListItem) //Model.SelectListItem
            {
                <option value=@listItem.Name />
            }
        </datalist>
        <span asp-validation-for="Employer"></span>
        <a asp-area="" asp-controller="Employer" asp-action="Add">Add Employer</a>
    </div>
    <br />

    <input type="submit" value="Add Job" />
</form>

