@using TechJobs6Persistent.ViewModels
@model TechJobs6Persistent.ViewModels.AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />


    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" asp-items="Model.SelectListItems"></select>
        <a asp-area="" asp-controller="Employer" asp-action="Add">Add Employer</a>
    </div>
    <br />



    <input type="submit" value="Add Job" />
</form>


